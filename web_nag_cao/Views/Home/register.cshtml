@{
    Layout = null; // Không sử dụng layout cho trang đăng ký
}

<!DOCTYPE html>
<html>
<head>
    <!-- Thêm thẻ meta và linh tinh cho trang -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng Ký</title>

    <!-- Bổ sung thẻ link để sử dụng Bootstrap qua CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Bổ sung các thẻ meta, CSS, JS khác nếu cần thiết -->
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h2 class="text-center">Đăng Ký Tài Khoản</h2>
                    </div>
                    <div class="card-body">
                        <form action="@Url.Action("register", "Home")" method="post">
                            <div class="form-group">
                                <label for="TenKH">Tên khách hàng:</label>
                                <input type="text" class="form-control" id="TenKH" name="TenKH" />
                            </div>
                            <div class="form-group">
                                <label for="SoDT">Số điện thoại:</label>
                                <input type="text" class="form-control" id="SoDT" name="SoDT"  />
                            </div>
                            <div class="form-group">
                                <label for="Email">Email:</label>
                                <input type="email" class="form-control" id="Email" name="Email"  />
                            </div>
                            <div class="form-group">
                                <label for="DiaChi">Địa chỉ:</label>
                                <input type="text" class="form-control" id="DiaChi" name="DiaChi" />
                            </div>
                            <div class="form-group">
                                <label for="TaiKhoan">Tài khoản:</label>
                                <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan" required />
                            </div>
                            <div class="form-group">
                                <label for="MatKhau">Mật khẩu:</label>
                                <input type="password" class="form-control" id="MatKhau" name="MatKhau" required />
                            </div>
                            <button type="submit" class="btn btn-success btn-block">Đăng Ký</button>
                        </form>
                        <div class="text-center mt-3">
                            <p>Bạn đã có tài khoản? <a href="@Url.Action("login", "Home")">Đăng nhập</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
