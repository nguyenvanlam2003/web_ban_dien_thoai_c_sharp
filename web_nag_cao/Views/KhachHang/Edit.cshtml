@model web_nag_cao.Models.KhachHang
@{
    ViewBag.Title = "Sửa thông tin khách hàng";
    Layout = null;
}

<title>Thêm Sản Phẩm</title>
<!-- Chèn các tệp CSS và JS của Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2>Sửa thông tin</h2>
    <h2>Mã khách hàng: @Model.MaKH</h2>
    @using (Html.BeginForm("Edit", "KhachHang", new { MaKH = Model.MaKH }, FormMethod.Post, new { enctype = "multipart/form-data", id = "myForm" }))
    {
        <div class="row">
            <!-- Cột 1 -->
            <div class="col-md-6">
                <!-- Tên sản phẩm -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.TenKH, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.TenKH, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(model => model.SoDT, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.SoDT, new { @class = "form-control" })
                </div>
            </div>

            <!-- Cột 2 -->
            <div class="col-md-6">
                <!-- Màn hình -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>

                <!-- Độ phân giải -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.DiaChi, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <!-- Nút Submit và Nút Quay Lại -->
        <button type="submit" class="btn btn-success">Sửa thông tin</button>
        <a href="@Url.Action("HienThiKH", "KhachHang")" class="btn btn-secondary">Quay Lại</a>
    }
</div>






